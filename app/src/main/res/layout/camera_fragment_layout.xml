<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/preview_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <com.smewise.camera2.ui.IndicatorView
        android:id="@+id/indicator_view"
        android:layout_above="@+id/bottom_container"
        android:background="@color/tab_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textSize="@dimen/indicatorTextSize"
        app:textColor="@color/indicatorNormalColor"
        app:activeColor="@color/indicatorActiveColor"
        app:paddingHor="@dimen/indicatorPaddingHor"
        app:paddingVer="@dimen/indicatorPaddingVer"/>

    <include layout="@layout/camera_bottom_controls" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/menu_container"
        android:background="@color/menu_background"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/cover_layout"/>
</RelativeLayout>